# Test Environment Variables (Unit Tests)
# 此文件提交到代码库，用于单元测试

# Application
NODE_ENV=test
PORT=3001

# Database (PostgreSQL - Test Database)
# 使用独立的测试数据库，避免影响开发数据
DATABASE_URL="postgresql://test_user:test_password@localhost:5432/nestjs_test?schema=public"

# Redis (使用不同的 DB 编号隔离测试数据)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1

# Logging (测试时减少日志输出)
LOG_LEVEL=error

# Test Configuration
# 测试环境可以使用固定的密钥
JWT_SECRET=test_jwt_secret_for_testing_only
JWT_EXPIRES_IN=1h
